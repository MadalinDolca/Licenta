<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/primara"
        app:cardCornerRadius="@dimen/radius20">

        <ImageView
            android:id="@+id/card_melodie_imageViewImagine"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/card_melodie_textViewNume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Nume melodie"
        android:textColor="@color/text"
        android:textSize="@dimen/text15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_melodie_textViewArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nume artist"
        android:textColor="@color/text_alt"
        android:textSize="@dimen/text15" />

</LinearLayout>
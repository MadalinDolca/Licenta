<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_meniu_linearLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pill" />

    <!--profil-->
    <LinearLayout
        android:id="@+id/bottom_sheet_meniu_linearLayoutProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <!--avatar-->
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_music"
            app:riv_corner_radius="@dimen/radius15" />

        <!--nume-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottom_sheet_meniu_textViewNume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textColor="@color/text"
                android:textSize="@dimen/text20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vizualizează-ți profilul"
                android:textColor="@color/text"
                android:textSize="@dimen/text15" />
        </LinearLayout>

    </LinearLayout>

    <!--separator-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#13000000" />

    <!--setari-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_setari"
            app:tint="@color/text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Setări"
            android:textColor="@color/text"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />
    </LinearLayout>

    <!--ceva-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_setari"
            app:tint="@color/text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Ceva"
            android:textColor="@color/text"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />
    </LinearLayout>

    <!--deconectare-->
    <Button
        android:id="@+id/bottom_sheet_meniu_buttonDeconectare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/background_button_deconectare"
        android:text="Deconectare"
        android:textColor="@color/text_pe_primara"
        android:textSize="@dimen/text20"
        android:textStyle="bold" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<!-- layout licente oferite -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.fragments.LicenteTipFragment">

    <!-- RecyclerView licente -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/licente_oferite_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- mesaj -->
    <TextView
        android:id="@+id/licente_oferite_textViewMesaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingHorizontal="@dimen/padding_ecran"
        android:text="Nu ai oferit nici o licență"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="@dimen/text_mare"
        android:visibility="gone" />

    <!-- animatie -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/licente_oferite_lottieAnimationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_music_girl" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- layout container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_ecran">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_people_technology" />

        <!-- text mesaj -->
        <TextView
            android:id="@+id/solicitare_autentificare_textViewMesaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trebuie să te autentifici pentru a utiliza această funcționalitate!"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/text_standard" />

        <!-- buton autentificare -->
        <Button
            android:id="@+id/solicitare_autentificare_buttonAutentificare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_rotunjit"
            android:backgroundTint="@color/primara"
            android:text="Autentifică-te"
            android:textColor="@color/text_pe_primara"
            android:textSize="@dimen/text_standard" />
    </LinearLayout>

</ScrollView>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Licenta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primara</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <!-- bara de status luminoasa si continut intunecat -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Meniu Bottom Sheet Dialog -->
    <style name="BottomSheetDialogMeniuTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/fundal_alt</item>
        <item name="android:windowIsFloating">false</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!--<item name="android:backgroundDimAmount">0.3</item>-->
        <!--<item name="android:windowFrame">@null</item>-->
    </style>

    <!-- SplashScreen -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>

        <!-- fundal transparent pentru bara de status si bara de navigare -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- bara de status luminoasa si continut intunecat -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>